{
  "name": "half-earth",
  "version": "0.0.0",
  "scripts": {
    "start": "webpack serve --progress --compress --mode=development --env version=dev",
    "build": "rm -rf dist; NODE_ENV=production webpack --mode production --env production --env version=$(git describe --always) --env timestamp=$(git log -1 --format=%ct) --progress",
    "build-wasm": "cd engine; wasm-pack build --release",
    "test": "cd engine; cargo test; wasm-pack test --headless --firefox"
  },
  "dependencies": {
    "@sentry/browser": "^6.15.0",
    "@sentry/tracing": "^6.15.0",
    "half-earth-engine": "file:engine/pkg",
    "hector-wasm": "file:hector/wasm",
    "hexasphere.js": "^0.2.2",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "three": "^0.129.0",
    "upng-js": "^2.1.0",
    "vue": "^3.1.4"
  },
  "devDependencies": {
    "@vue/compiler-sfc": "^3.1.4",
    "css-loader": "^5.2.6",
    "mini-css-extract-plugin": "^2.2.0",
    "raw-loader": "^4.0.2",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.6",
    "vue-loader": "^16.8.3",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-glsl-loader": "git+https://github.com/grieve/webpack-glsl-loader.git"
  }
}
